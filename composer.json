{
    "name": "franpass87/wceventsfp",
    "description": "Enterprise booking platform plugin for WordPress/WooCommerce",
    "version": "2.0.1",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "woocommerce", "booking", "events", "enterprise"],
    "homepage": "https://github.com/franpass87/WCEventsFP",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Francesco Passeri",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.12 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.8",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "WCEFP\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WCEFP\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs.xml",
        "lint:fix": "phpcbf --standard=phpcs.xml",
        "analyze": "phpstan analyse --configuration=phpstan.neon",
        "test": "phpunit --configuration=phpunit.xml",
        "test:coverage": "phpunit --configuration=phpunit.xml --coverage-html coverage",
        "quality": [
            "@lint",
            "@analyze", 
            "@test"
        ]
    },
    "extra": {
        "installer-paths": {
            "vendor/{$name}/": ["type:wordpress-plugin"]
        }
    }
}