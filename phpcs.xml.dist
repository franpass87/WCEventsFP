<?xml version="1.0"?>
<ruleset name="Plugin WPCS">
  <description>WordPress Coding Standards + PHPCompatibility</description>

  <file>./</file>
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
  <exclude-pattern>assets/*</exclude-pattern>
  <exclude-pattern>languages/*</exclude-pattern>
  <exclude-pattern>*.min.js</exclude-pattern>
  <exclude-pattern>*.min.css</exclude-pattern>
  <exclude-pattern>tests/*</exclude-pattern>
  <exclude-pattern>docs/*</exclude-pattern>

  <config name="testVersion" value="8.0-"/>

  <rule ref="WordPress"/>
  <rule ref="WordPress-Extra"/>
  <rule ref="PHPCompatibilityWP"/>

  <!-- Alza il livello di severitÃ  su sicurezza -->
  <rule ref="WordPress.Security.ValidatedSanitizedInput"/>
  <rule ref="WordPress.Security.EscapeOutput"/>

  <!-- Consenti ignore mirati, ma richiedi motivazione -->
  <rule ref="Generic.Commenting.Todo.CommentFound">
    <severity>0</severity>
  </rule>

  <!-- Opzionale: evita rumore su file principali di WooCommerce -->
  <rule ref="WordPress.Files.FileName">
    <exclude name="WordPress.Files.FileName"/>
  </rule>
</ruleset>