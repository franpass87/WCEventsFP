{
  "name": "wceventsfp-frontend",
  "version": "2.1.1",
  "description": "Frontend build tools for WCEventsFP plugin",
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "lint:js": "eslint assets/js/**/*.js",
    "lint:css": "stylelint assets/css/**/*.css",
    "format": "prettier --write assets/js/**/*.js assets/css/**/*.css",
    "test:js": "jest",
    "analyze": "webpack-bundle-analyzer dist/bundle-stats.json"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.44.0",
    "eslint-config-wordpress": "^2.0.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^30.0.5",
    "jquery": "^3.7.1",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "prettier": "^3.0.0",
    "sass": "^1.63.0",
    "sass-loader": "^13.3.0",
    "stylelint": "^15.10.0",
    "stylelint-config-wordpress": "^17.0.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ]
  }
}
