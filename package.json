{
  "name": "wceventsfp-frontend",
  "version": "2.1.1",
  "description": "Frontend build tools for WCEventsFP plugin",
  "private": true,
  "scripts": {
    "build": "wp-scripts build",
    "dev": "wp-scripts start",
    "lint:js": "wp-scripts lint-js assets/js/",
    "lint:css": "wp-scripts lint-style assets/css/",
    "format": "wp-scripts format assets/js/ assets/css/",
    "format:js": "prettier --write assets/js/**/*.js",
    "format:css": "prettier --write assets/css/**/*.css",
    "test:js": "jest",
    "analyze": "wp-scripts build --analyze"
  },
  "devDependencies": {
    "@wordpress/scripts": "^27.0.0",
    "@wordpress/eslint-plugin": "^17.0.0",
    "@wordpress/stylelint-config": "^21.0.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^30.0.5",
    "jquery": "^3.7.1",
    "prettier": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ]
  }
}
